{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Fleets",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["$APPCONFIG/*"]
      },
      "globalShortcut": {
        "all": true
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.simpledeadly.fleets",
      "icon": []
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Fleets",
        "width": 700,
        "height": 450,
        "resizable": true,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "fullscreen": false,
        "visible": false
      }
    ],
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": ["https://github.com/simpledeadly/fleets/releases/latest/download/latest.json"],
