{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Fleeets",
    "version": "../package.json"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": false
      },
      "fs": {
        "all": true,
        "scope": ["$DOWNLOAD/*", "$DESKTOP/*", "$DOCUMENTS/*", "$APPCONFIG/*"]
      },
      "globalShortcut": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.simpledeadly.fleeets",
      "icon": []
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Fleeets",
        "width": 900,
        "height": 700,
        "resizable": true,
        "alwaysOnTop": false,
        "decorations": true,
        "transparent": true,
        "fullscreen": false,
        "visible": false
      }
    ],
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": ["https://github.com/simpledeadly/fleeets/releases/latest/download/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk5NkQyNTAzRTdDRjVGRTEKUldUaFg4L25BeVZ0bVlQOW1xV0RZNlV2THVTVkd4enE4QUw1WjJVaG1YNkc3aUl0N2JUZEp0d1kK"
    }
  }
}
